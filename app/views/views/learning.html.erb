<!-- header links -->
<% if logged_in? %>
  <%= link_to "Ausloggen", logout_path, class: "pull-right" %> <br>
<% end %>

<% if notice %>
  <div class="pull-right"> <%= notice %> </div>
<% end %>

<!-- central content -->
<h2 class="word"> 
  <span id="english"> <%= @word.english %> </span> 
  <span id="german"> <%= @word.german %> </span> 
</h2>

<!-- body of content -->
<div class="buttons">
  <%= link_to I18n.t('learning.reveal_button'), "#", onclick: "reveal('german','english');", class: "btn btn-lg btn-success" %>
  <%= link_to I18n.t('learning.next_button'), learning_path(current_word: @word.english), class: "btn btn-lg btn-primary" %>
</div>

<%= session[:count] %>
