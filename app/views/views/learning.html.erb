<!-- header links -->
<% if logged_in? %>
  <%= link_to "Log out", logout_path, class: "pull-right" %> <br>
<% end %>

<% if notice %>
  <div class="pull-right"> <%= notice %> </div>
<% end %>

<!-- central content -->
<h2 class="word"> 
  <span id="english"> <%= @word.english %> </span> 
  <span id="german"> <%= @word.german %> </span> 
</h2>

<!-- body of content -->
<div class="buttons">
  <%= link_to "vokabel aufdecken", "#", onclick: "reveal('german','english');", class: "btn btn-lg btn-success" %>
  <%= link_to "weiter -->", learning_path(current_word: @word.english), class: "btn btn-lg btn-primary" %>
</div>

<div id="text">
  *Vokabeln die Ihnen vor dem Weitergehen nicht aufgedeckt werden, werden <br> 
  als "gewusst" markiert und in der Zukunft nicht nochmals abgefragt.
</div>

<!-- in dev -->
<br> <br> <%= session[:words] if Rails.env.development? %>

<br> <br> last word: <%= @last_word %>
<br> <br> curr: <%= current_user.english_knowns %>
